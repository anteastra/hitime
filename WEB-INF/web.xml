<web-app>
    
    <servlet>
        <servlet-name>projects_controller</servlet-name>
        <servlet-class>com.hitime.controller.Projects</servlet-class>
    </servlet>
   	<servlet-mapping>
        <servlet-name>projects_controller</servlet-name>
        <url-pattern>/projects</url-pattern>
    </servlet-mapping>
  
    <servlet>
        <servlet-name>Authenticate</servlet-name>
        <servlet-class>com.hitime.controller.Authenticate</servlet-class>
    </servlet>
   	<servlet-mapping>
        <servlet-name>Authenticate</servlet-name>
        <url-pattern>/authenticate.do</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
		<welcome-file>/main.jsp</welcome-file> 
	</welcome-file-list>
	
	<filter>
		<filter-name>securityChain</filter-name>
		<filter-class>com.hitime.filters.Security</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>securityChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
